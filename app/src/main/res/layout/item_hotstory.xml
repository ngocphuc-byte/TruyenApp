<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_story"
            android:layout_width="180dp"
            android:layout_height="280dp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_marginStart="125dp"
            android:layout_marginTop="15dp"
            android:background="#FF3B3B"
            android:paddingLeft="10dp"
            android:text="HOT"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />
        

        <TextView
            android:id="@+id/name_story"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_below="@+id/trangthai_story"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/trangthai_story"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_story"
            android:textSize="12dp"
            android:textStyle="italic"

            />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/trangthai_story"
            android:background="#1B1A1A"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <ImageView
                android:id="@+id/like_story"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/like" />

            <TextView
                android:id="@+id/soluonglike_story"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="2dp"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/favorite_story"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="55dp"
                android:src="@drawable/ic_favoritenav"
                app:tint="#FF1100" />

            <TextView
                android:id="@+id/soluongfavorite_story"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="2dp"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="italic" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>

