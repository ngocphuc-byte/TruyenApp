<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="20dp"
    android:id="@+id/item_tintuc"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <ImageView
            android:id="@+id/img_tintuc"
            android:layout_width="180dp"
            android:layout_height="300dp" />

        <TextView
            android:id="@+id/tieude_tintuc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_tintuc"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/blue400"
            android:layout_marginStart="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/noidung_tintuc"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/tieude_tintuc"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img_tintuc"
            android:textSize="14dp"

            />

        <Button
            android:id="@+id/duongdanmua"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#FA4C16"
            android:text="Đường dẫn mua"
            android:textColor="@color/white" />
    </RelativeLayout>
</LinearLayout>

